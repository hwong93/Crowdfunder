  <div class="project">
    <div class="detail">
      <div class="img-container pads">
        <img src="<%= project.media_url %>" alt="" id="project-image"/>
      </div>
      <div class="pads proj-title">
        <h3 class="text-left"><%= project.name %> </h3>
      </div>
      <div class="pads proj-desc">
        <p>
          <%= truncate(project.description, length: 100) %>
        </p>
      </div>
      <div class="pads text-right proj-more">
        <%= link_to 'Learn More...', project_path(project), class:'button info small' %>
      </div>
    </div>
  </div>
