<div class="project-info">
    <div class="title text-center">
      <h1><%= @project.name %></h1>
      <p>By: <strong><%= link_to @project.owner.name, user_path(@project.owner) %></strong></p>
    </div>

    <div class="row">
      <div class="large-8 columns img-contain">
        <img src="<%= @project.media_url %>" alt="" class="proj-image"/>
      </div>

      <div class="large-4 columns">
        <div class="funds-raised">
          <div id="total_funds" data="<%=@project.total_moneh %>"></div>
        </div>
        <div id="project-funding-status">
          <%= render partial: 'project_total_money' %>
        </div>

        <div id="project-backed">
          <% if current_user %>
            <% if current_user.projects.find(@project.id) %>
              <h2>You've backed this project!</h2>
            <% else %>
              <%= render partial: 'project_dates' %>
            <% end %>
          <% else %>
              <%= render partial: 'project_dates' %>
          <% end %>


        </div>
      </div>

  </div>
</div>


<div class="container">
  <div class="row">
    <div class="large-8 columns proj-description">
      <h3>About this Project</h3>
      <p>
        <%= @project.description %>
      </p>
    </div>
    <div class="large-4 columns">
      <h3>Rewards</h3>
      <%= render @project.rewards %>
    </div>
  </div>
</div>








  <% if current_user && current_user.id == @project.owner_id %>
  <%= link_to 'Edit', edit_project_path(@project) %>
  <% end %>
